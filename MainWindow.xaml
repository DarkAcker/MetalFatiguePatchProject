<Window x:Class="MetalFatiguePatchProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetalFatiguePatchProject"
        mc:Ignorable="d"
        Title="Metal Fatigue Patcher" Height="164.769" Width="397.077">
    <Grid Height="144" VerticalAlignment="Top" Margin="0,0,0,-31">
        <StackPanel Margin="0,0,10,10">
            <Label Content="Path of Metal Fatigue:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="Input_path_txt" Width="300" Margin="0 10 10 0"/>
                <Button Content="Select" Margin="0 10 0 0" Click="Select_Path" Width="43"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Patch" Margin="0 10 0 0" Click="Patch_Click" HorizontalAlignment="Left" Width="47"/>
                <Button Content="Unpatch" Margin="0 10 0 0" HorizontalAlignment="Right" Click="Unpatch_Click" Width="59"/>
                <Label x:Name="out_txt" Content="" Height="32" Width="248"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
